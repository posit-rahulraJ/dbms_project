<body>
  <h1>Update Employee</h1>
  <form id="updateEmployeeForm">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>
    <br>
    <label for="salary">Salary:</label>
    <input type="text" id="salary" name="salary" required>
    <br>
    <label for="age">Age:</label>
    <input type="text" id="age" name="age" required>
    <br>
    <button type="button" onclick="updateEmployee('<%= employee.id %>')">Update Employee</button>
  </form>
  <a href="/employee/create">Create Employee</a>
  <a href="/employee/showAll">Show All Employees</a>
  <a href="/employee/delete/<%= employee.id %>">Delete Employee</a>
  <!-- Your EJS template file (updateEmployee.ejs) -->

<!-- ... existing content ... -->

<script>
  function updateEmployee(id) {
    // Retrieve form data
    const name = document.getElementById('name').value;
    const salary = document.getElementById('salary').value;
    const age = document.getElementById('age').value;

    // Make an HTTP request to update the employee
    fetch(`/employee/update/${id}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ id, name, salary, age }),
    })
    .then(response => response.json())
    .then(data => {
      // Handle the response from the server (data contains the updated employee)
      console.log('Employee updated successfully:', data.employee);
    })
    .catch(error => {
      console.error('Error updating employee:', error);
    });
  }
</script>

